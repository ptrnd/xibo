<div style="font-size: 28px; color: #fff" id="date"></div>
<div style="font-size: 28px; color: #fff" id="time"></div>

<script>
  setInterval(function () {
    n = new Date();
    d = (n.getDate() < 10 ? "0" : "") + n.getDate();
    m = (n.getMonth() + 1 < 10 ? "0" : "") + (n.getMonth() + 1);
    y = n.getFullYear();
    h = (n.getHours() < 10 ? "0" : "") + n.getHours();
    min = (n.getMinutes() < 10 ? "0" : "") + n.getMinutes();
    sec = (n.getSeconds() < 10 ? "0" : "") + n.getSeconds();
    document.getElementById("date").innerHTML = d + "/" + m + "/" + y;
    document.getElementById("time").innerHTML = h + ":" + min + ":" + sec;
  }, 100);
</script>
</div>
